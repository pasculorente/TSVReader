<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tsvreader.OpenPaneController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="5.0">
            <children>
                <TextField fx:id="file" onAction="#openFile" onMouseClicked="#openFile" promptText="Select file" />
                <ComboBox fx:id="types" promptText="Select file type" xmlns:fx="http://javafx.com/fxml"/>
                <HBox alignment="TOP_CENTER" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#accept" text="Load" />
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
